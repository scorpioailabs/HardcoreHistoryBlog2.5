@using Microsoft.AspNetCore.Identity
@using HardcoreHistoryBlog.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@if (SignInManager.IsSignedIn(User))
{
    <form class="form-inline" asp-controller="Auth" asp-action="Logout" method="post" id="logoutForm">
        <ul class="navbar-nav py-0">
            <li class="nav-item py-0">
                <a a class="nav-link scroll-link py-0" asp-controller="Account" asp-action="Index"> Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item py-0">
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav py-0">
        <li class="nav-item py-0"><a class="nav-link scroll-link py-0" asp-controller="Account" asp-action="Register">Register</a></li>
        <li class="nav-item py-0"><a class="nav-link scroll-link py-0" asp-controller="Auth" asp-action="Login">Login</a></li>
    </ul>
}