@using Microsoft.AspNetCore.Identity
@using HardcoreHistoryBlog.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right mr-auto">
            <li class="navbar-right">
                <a a class="nav-link scroll-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right mr-auto">
        <li class ="nav-item"><a class="nav-link scroll-link"  asp-controller="Account" asp-action="Register">Register</a></li>
        <li class ="nav-item"><a class="nav-link scroll-link" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}