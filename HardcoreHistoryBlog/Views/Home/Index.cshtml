@{
    ViewBag.Title = "Home";
}


<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/1.jpg" alt="Ancient History" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h4>
                    Learn about History, the Hardcore way!
                    <a class="btn btn-default" asp-controller="Posts" asp-action="Index">
                        Learn More
                    </a>
                </h4>
            </div>
        </div>
        <div class="item">
            <img src="~/images/2.jpg" alt="Medieval History" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h4>
                    See what became of those who dared revolt against the Assyrians.
                    <a class="btn btn-default" asp-controller="Posts" asp-action="Index">
                        Learn More
                    </a>
                </h4>
            </div>
        </div>
        <div class="item">
            <img src="~/images/3.jpg" alt="The Mongols" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <h4>
                    If you think the Assyrians were not <b>Hardcore</b> enough, read about the Mongols!
                    <a class="btn btn-default" asp-controller="Posts" asp-action="Index">
                        Learn More
                    </a>
                </h4>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="fa-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="fa-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

